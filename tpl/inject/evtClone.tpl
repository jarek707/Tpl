<div style='padding:10px;' >
	<select id='cloneSelect' class='formSel' onChange='Broadcasts.changeCloneSelect();'>
		<option value='-1'>Please select</option>
	</select>
	<div class='formButtonWrap'>
		<input type="button" id="cloneButton" class='formButton clone' onClick="Broadcasts.cloneSend();" value='' title='Click to Clone the Event to the Selected Broadcast.'/>
	</div>
	<div class='formButtonWrap'>
		<input type="button" id="cloneRefreshButton" class='formButton refresh' onClick="document.location.reload();" value='' style='display:none' /title='Refresh Page to view Cloned events.'>
	</div>
	<div id='cloneNotify' class='cloneNotify'>
		<span id='cloneNotifyText'></span>
		<br />
		<div class='cloneCountInfo'>Number of cloned Events:<span id='cloneCount'>0</span>.</div>
	</div>
</div>

